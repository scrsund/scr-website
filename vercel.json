{
  "version": 2,
  "builds": [
    { "src": "backend-server/api/**/*.js", "use": "@vercel/node" },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend-server/api/$1" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
